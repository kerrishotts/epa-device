<?xml version='1.0' encoding='utf-8'?>
<widget id="com.packt.epa.device" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>EPA Device Ex</name>
    <description>
        Sample application demonstrating the use of the Cordova/PhoneGap Device plugin for
        Packt's Extending PhoneGap Application's video course.
    </description>
    <author email="kerrishotts@gmail.com" href="https://www.photokandy.com">
        Kerri Shotts
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="~4.3.1" />
    <engine name="android" spec="~6.1.2" />
    <plugin name="cordova-plugin-device" spec="~1.1.4" />
    <engine name="browser" spec="~4.1.0" />
</widget>
